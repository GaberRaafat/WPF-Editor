<Window
    x:Class="Editor.View.LogInView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Editor.Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="LogInView"
    Width="400"
    Height="400"
    Background="#6e7179"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Resources>
        <Style
            x:Key="PopupButton"
            BasedOn="{StaticResource GeneralButton}"
            TargetType="Button" />
        <conv:BoolToVisibilityConverter x:Key="BoolVisibilityConverter" />
        <conv:NullVisibilityConverter x:Key="NullVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <viewModels:LogInViewModel />
    </Window.DataContext>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Header with Logo and Text  -->
            <RowDefinition Height="Auto" />
            <!--  User Name  -->
            <RowDefinition Height="Auto" />
            <!--  Password  -->
            <RowDefinition Height="Auto" />
            <!--  Error Message  -->
            <RowDefinition Height="Auto" />
            <!--  Log In Button  -->
            <RowDefinition Height="Auto" />
            <!--  Create New Account Button  -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Header with Logo and Text  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,10,0,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <!--  Logo  -->
            <Image
                Width="40"
                Height="40"
                Margin="0,0,10,0"
                Source="/Editor;component/Resources/shape.jpg" />
            <!--  Application Name  -->
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="Georgia"
                FontSize="28"
                FontWeight="Bold"
                Foreground="black"
                Text="MiniDraw">
                <TextBlock.Effect>
                    <DropShadowEffect
                        BlurRadius="5"
                        Opacity="0.5"
                        ShadowDepth="2"
                        Color="Black" />
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>

        <!--  User Name Label and TextBox  -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            Background="AliceBlue"
            CornerRadius="10">
            <Label
                Width="120"
                Height="28"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="User Name"
                FontWeight="Bold" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Background="White"
            CornerRadius="10">
            <TextBox
                Width="200"
                Height="28"
                Padding="5"
                VerticalContentAlignment="Center"
                BorderThickness="0"
                Text="{Binding UserName, Mode=TwoWay}" />
        </Border>

        <!--  Password Label and TextBox  -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="10"
            Background="AliceBlue"
            CornerRadius="10">
            <Label
                Width="120"
                Height="28"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Password"
                FontWeight="Bold" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            Background="White"
            CornerRadius="10">
            <TextBox
                Width="200"
                Height="28"
                Padding="5"
                VerticalContentAlignment="Center"
                BorderThickness="0"
                Text="{Binding PassWord, Mode=TwoWay}" />
        </Border>

        <!--  Error Message  -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="200"
            Height="28"
            Margin="10"
            Foreground="Red"
            Text="Wrong Credentials"
            Visibility="{Binding WrongCredentials, Converter={StaticResource BoolVisibilityConverter}}" />

        <!--  Log In Button  -->
        <Border
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Background="Green"
            CornerRadius="20">
            <Button
                Height="35"
                Padding="5"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding LoginCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Log In"
                FontSize="16"
                FontWeight="Bold"
                Foreground="black" />
        </Border>

        <!--  Create New Account Button  -->
        <Border
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="10"
            Background="PaleGoldenrod"
            CornerRadius="20">
            <Button
                Height="35"
                Padding="5"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding SignupCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Create New Account"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Black" />
        </Border>
    </Grid>
</Window>