<Window
    x:Class="Editor.View.AddLineView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="AddLineView"
    Width="400"
    Height="550"
    Background="#6e7179"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="LineLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="LineTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="28" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style x:Key="LineButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Background" Value="Green" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:AddLineViewModel />
    </Window.DataContext>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Text -->
            <RowDefinition Height="Auto" />
            <!-- Point Name -->
            <RowDefinition Height="Auto" />
            <!-- X1 -->
            <RowDefinition Height="Auto" />
            <!-- X2 -->
            <RowDefinition Height="Auto" />
            <!-- Y1 -->
            <RowDefinition Height="Auto" />
            <!-- Y2 -->
            <RowDefinition Height="Auto" />
            <!-- Add Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header Text -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Enter Data Required To Draw Line"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Margin="0,10,0,20" />

        <!-- Point Name Label and TextBox -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * PointName   =  "
                Style="{StaticResource LineLabelStyle}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="PointName"
                Style="{StaticResource LineTextBoxStyle}"
                Text="{Binding Name, Mode=TwoWay}" />
        </Border>

        <!-- X1 Label and TextBox -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * X1   =  "
                Style="{StaticResource LineLabelStyle}" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="X1Point"
                Style="{StaticResource LineTextBoxStyle}"
                Text="{Binding X1, Mode=TwoWay}" />
        </Border>

        <!-- X2 Label and TextBox -->
        <Border
            Grid.Row="3"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * X2   =  "
                Style="{StaticResource LineLabelStyle}" />
        </Border>

        <Border
            Grid.Row="3"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="X2Point"
                Style="{StaticResource LineTextBoxStyle}"
                Text="{Binding X2, Mode=TwoWay}" />
        </Border>

        <!-- Y1 Label and TextBox -->
        <Border
            Grid.Row="4"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Y1   =  "
                Style="{StaticResource LineLabelStyle}" />
        </Border>

        <Border
            Grid.Row="4"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="Y1Point"
                Style="{StaticResource LineTextBoxStyle}"
                Text="{Binding Y1, Mode=TwoWay}" />
        </Border>

        <!-- Y2 Label and TextBox -->
        <Border
            Grid.Row="5"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Y2   =  "
                Style="{StaticResource LineLabelStyle}" />
        </Border>

        <Border
            Grid.Row="5"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="Y2Point"
                Style="{StaticResource LineTextBoxStyle}"
                Text="{Binding Y2, Mode=TwoWay}" />
        </Border>

        <!-- Add Button -->
        <Border
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            Background="Green"
            Margin="10">
            <Button
                Style="{StaticResource LineButtonStyle}"
                Command="{Binding AddLineCommand}"
                Content="Add" />
        </Border>
    </Grid>
</Window>