<Window
    x:Class="Editor.View.AddProjectView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="AddProjectView"
    Width="400"
    Height="400"
    Background="#6e7179"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="ProjectLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="ProjectTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="28" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style x:Key="ProjectButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Background" Value="Green" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:AddProjectViewModel />
    </Window.DataContext>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Text -->
            <RowDefinition Height="Auto" />
            <!-- Name -->
            <RowDefinition Height="Auto" />
            <!-- Description -->
            <RowDefinition Height="Auto" />
            <!-- Add Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header Text -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Enter Data Required For Project"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Margin="0,10,0,20" />

        <!-- Name Label and TextBox -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Name          =      "
                Style="{StaticResource ProjectLabelStyle}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="RectName"
                Style="{StaticResource ProjectTextBoxStyle}"
                Text="{Binding Name, Mode=TwoWay}" />
        </Border>

        <!-- Description Label and TextBox -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Description ="
                Style="{StaticResource ProjectLabelStyle}" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="RectWidth"
                Style="{StaticResource ProjectTextBoxStyle}"
                Text="{Binding Description, Mode=TwoWay}" />
        </Border>

        <!-- Add Button -->
        <Border
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            Background="Green"
            Margin="10">
            <Button
                Style="{StaticResource ProjectButtonStyle}"
                Command="{Binding AddProjectCommand}"
                Content="Add" />
        </Border>
    </Grid>
</Window>