<Window
    x:Class="Editor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Editor.Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Editor.Model"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="MainWindow"
    Width="820"
    Height="450"
    MinWidth="820"
    MinHeight="550"
    mc:Ignorable="d">

    <Window.Resources>
        <Style
            x:Key="PopupButton"
            BasedOn="{StaticResource GeneralButton}"
            TargetType="Button" />
        <conv:BoolToVisibilityConverter x:Key="BoolVisibilityConverter" />
        <conv:NullVisibilityConverter x:Key="NullVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Menu
            Grid.Row="0"
            Grid.ColumnSpan="3"
            BorderBrush="LightGray"
            BorderThickness="1">
            <MenuItem Header="File">
                <MenuItem Command="{Binding ImportShapesCommand}" Header="Import" />
                <MenuItem Command="{Binding ExportShapesCommand}" Header="Export" />
            </MenuItem>
        </Menu>


        <Border
            Grid.Row="1"
            Grid.Column="0"
            Background="Teal"
            BorderBrush="LightGray">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition />
                    <RowDefinition Height="350" />
                </Grid.RowDefinitions>
                <ToggleButton
                    x:Name="AddButton"
                    Grid.Row="0"
                    Height="30"
                    VerticalAlignment="Stretch"
                    IsChecked="{Binding IsAddMenuOpened, Mode=TwoWay}"
                    Style="{StaticResource GeneralButton}">

                    <ToggleButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Canvas
                                Width="24"
                                Height="25"
                                VerticalAlignment="Stretch">
                                <Path Data="M20 14H14V20H10V14H4V10H10V4H14V10H20V14Z" Fill="DarkBlue" />
                            </Canvas>
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="Add shape"
                                TextAlignment="Center" />
                            <Popup IsOpen="{Binding IsChecked, ElementName=AddButton}">
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <Style BasedOn="{StaticResource PopupButton}" TargetType="Button" />
                                    </StackPanel.Resources>
                                    <Button Command="{Binding ShowRectangleWindow}" Content="Add Rectangle" />
                                    <Button Command="{Binding ShowCircleWindow}" Content="Add Circle" />
                                    <Button Command="{Binding ShowLineWindow}" Content="Add Line" />

                                </StackPanel>
                            </Popup>
                        </StackPanel>
                    </ToggleButton.Content>
                </ToggleButton>
                <StackPanel
                    Grid.Row="2"
                    Margin="10"
                    VerticalAlignment="Bottom"
                    Background="White"
                    Orientation="Vertical"
                    Visibility="{Binding OnEditShape, Converter={StaticResource NullVisibilityConverter}}">

                    <Label
                        Content="Edit Selected Shape"
                        FontSize="14"
                        FontWeight="Bold" />

                    <ContentControl Content="{Binding OnEditShape}">
                        <ContentControl.Resources>
                            <!--  Template for Circle  -->
                            <DataTemplate DataType="{x:Type models:Circle}">
                                <StackPanel>
                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Name:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="100" Text="{Binding Name, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Radius 1:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding Radius1, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Radius 2:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding Radius2, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>

                            <!--  Template for Rectangle  -->
                            <DataTemplate DataType="{x:Type models:Rectangle}">
                                <StackPanel>
                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Name:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="100" Text="{Binding Name, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Width:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding Width, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Height:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding Height, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>

                            <!--  Template for Line  -->
                            <DataTemplate DataType="{x:Type models:Line}">
                                <StackPanel>
                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Name:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="100" Text="{Binding Name, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * X1:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding X1, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Y1:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding Y1, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * X2:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding X2, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Label Content=" * Y2:" />
                                        <Border
                                            Height="20"
                                            BorderBrush="Teal"
                                            BorderThickness="1">
                                            <TextBox Width="70" Text="{Binding Y2, Mode=TwoWay}" />
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>

                    <Button
                        Width="100"
                        Height="25"
                        Margin="0,20"
                        HorizontalAlignment="Center"
                        Command="{Binding SaveEditCommand}"
                        Content="Close" />
                </StackPanel>
            </Grid>
        </Border>

        <Canvas Grid.Row="1" Grid.Column="1">
            <!--  Display the selected shape dynamically  -->
            <ContentControl Content="{Binding SelectedShape}">
                <ContentControl.Resources>
                    <!--  Template for Circle  -->
                    <DataTemplate DataType="{x:Type models:Circle}">
                        <Ellipse
                            Width="{Binding Radius1}"
                            Height="{Binding Radius2}"
                            Fill="LightBlue"
                            Stroke="Black"
                            StrokeThickness="2" />
                    </DataTemplate>

                    <!--  Template for Rectangle  -->
                    <DataTemplate DataType="{x:Type models:Rectangle}">
                        <Rectangle
                            Width="{Binding Width}"
                            Height="{Binding Height}"
                            Fill="LightGreen"
                            Stroke="Black"
                            StrokeThickness="2" />
                    </DataTemplate>

                    <!--  Template for Line  -->
                    <DataTemplate DataType="{x:Type models:Line}">
                        <Line
                            Stroke="Black"
                            StrokeThickness="2"
                            X1="{Binding X1}"
                            X2="{Binding X2}"
                            Y1="{Binding Y1}"
                            Y2="{Binding Y2}" />
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Canvas>


        <Border
            Grid.Row="1"
            Grid.Column="2"
            Background="Beige"
            BorderBrush="LightGray"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <ListBox
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    BorderThickness="1"
                    ItemsSource="{Binding Shapes}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedShape, Mode=TwoWay}">
                    <ListBox.Resources>
                        <!--  Template for Circle  -->
                        <DataTemplate DataType="{x:Type models:Circle}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="Name:" />
                                <TextBlock Margin="10,0" Text="{Binding Name}" />

                                <TextBlock FontWeight="Bold" Text="Radius 1:" />
                                <TextBlock Margin="10,0" Text="{Binding Radius1}" />

                                <TextBlock FontWeight="Bold" Text="Radius 2:" />
                                <TextBlock Margin="10,0" Text="{Binding Radius2}" />

                                <Separator Margin="0,5" HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </DataTemplate>

                        <!--  Template for Rectangle  -->
                        <DataTemplate DataType="{x:Type models:Rectangle}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="Name:" />
                                <TextBlock Margin="10,0" Text="{Binding Name}" />

                                <TextBlock FontWeight="Bold" Text="Width:" />
                                <TextBlock Margin="10,0" Text="{Binding Width}" />

                                <TextBlock FontWeight="Bold" Text="Height:" />
                                <TextBlock Margin="10,0" Text="{Binding Height}" />

                                <Separator Margin="0,5" HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </DataTemplate>

                        <!--  Template for Line  -->
                        <DataTemplate DataType="{x:Type models:Line}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="Name:" />
                                <TextBlock Margin="10,0" Text="{Binding Name}" />

                                <TextBlock FontWeight="Bold" Text="X1:" />
                                <TextBlock Margin="10,0" Text="{Binding X1}" />

                                <TextBlock FontWeight="Bold" Text="Y1:" />
                                <TextBlock Margin="10,0" Text="{Binding Y1}" />

                                <TextBlock FontWeight="Bold" Text="X2:" />
                                <TextBlock Margin="10,0" Text="{Binding X2}" />

                                <TextBlock FontWeight="Bold" Text="Y2:" />
                                <TextBlock Margin="10,0" Text="{Binding Y2}" />

                                <Separator Margin="0,5" HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.Resources>
                </ListBox>

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Width="75"
                        Margin="10,10"
                        HorizontalAlignment="Right"
                        Command="{Binding EditSelectedCommand}"
                        Visibility="{Binding HasSelectedItem, Converter={StaticResource BoolVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <!--  Edit Text  -->
                            <TextBlock Text="Edit  " />
                            <!--  Icon  -->
                            <TextBlock
                                Margin="0,0,5,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                Text="&#xEB7E;" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="75"
                        Height="25"
                        Margin="20,10"
                        HorizontalAlignment="Right"
                        Command="{Binding DeleteSelectedCommand}"
                        Visibility="{Binding HasSelectedItem, Converter={StaticResource BoolVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <!--  Edit Text  -->
                            <TextBlock Text="Delete  " />
                            <!--  Icon  -->
                            <TextBlock
                                Margin="0,0,5,0"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="16"
                                Text="&#xE74D;" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
