<Window
    x:Class="Editor.View.AddRectangleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="AddRectangleView"
    Width="400"
    Height="400"
    Background="#6e7179"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="RectangleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="RectangleTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="28" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style x:Key="RectangleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="Wheat" />
            <Setter Property="Background" Value="Green" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:AddRectangleViewModel />
    </Window.DataContext>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Text -->
            <RowDefinition Height="Auto" />
            <!-- Rectangle Name -->
            <RowDefinition Height="Auto" />
            <!-- Width -->
            <RowDefinition Height="Auto" />
            <!-- Height -->
            <RowDefinition Height="Auto" />
            <!-- Add Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header Text -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Enter Data Required For Rectangle"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Margin="0,10,0,20" />

        <!-- Rectangle Name Label and TextBox -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Rectangle Name   =  "
                Style="{StaticResource RectangleLabelStyle}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="RectName"
                Style="{StaticResource RectangleTextBoxStyle}"
                Text="{Binding Name, Mode=TwoWay}" />
        </Border>

        <!-- Width Label and TextBox -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Width   =              "
                Style="{StaticResource RectangleLabelStyle}" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="RectWidth"
                Style="{StaticResource RectangleTextBoxStyle}"
                Text="{Binding Width, Mode=TwoWay}" />
        </Border>

        <!-- Height Label and TextBox -->
        <Border
            Grid.Row="3"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Height   =             "
                Style="{StaticResource RectangleLabelStyle}" />
        </Border>

        <Border
            Grid.Row="3"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="Height"
                Style="{StaticResource RectangleTextBoxStyle}"
                Text="{Binding Height, Mode=TwoWay}" />
        </Border>

        <!-- Add Button -->
        <Border
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            Background="Green"
            Margin="10"
            >
            <Button
                
                Style="{StaticResource RectangleButtonStyle}"
                Command="{Binding AddRectangleCommand}"
                Content="Add"
                Foreground="black"
                />
        </Border>
    </Grid>
</Window>