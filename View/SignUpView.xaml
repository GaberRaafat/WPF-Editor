<Window
    x:Class="Editor.View.SignUpView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Editor.Utility"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="SignUpView"
    Width="400"
    Height="400"
    Background="#6e7179" 
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Resources>
        <Style
            x:Key="PopupButton"
            BasedOn="{StaticResource GeneralButton}"
            TargetType="Button" />
        <conv:BoolToVisibilityConverter x:Key="BoolVisibilityConverter" />
        <conv:NullVisibilityConverter x:Key="NullVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <viewModels:SignupviewModel />
    </Window.DataContext>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Text -->
            <RowDefinition Height="Auto" />
            <!-- User Name -->
            <RowDefinition Height="Auto" />
            <!-- Password -->
            <RowDefinition Height="Auto" />
            <!-- Error Message -->
            <RowDefinition Height="Auto" />
            <!-- Register Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header Text -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Create your own project"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Margin="0,10,0,20" />

        <!-- User Name Label and TextBox -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Width="120"
                Height="28"
                FontWeight="Bold"
                Content="Enter User Name"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                Width="200"
                Height="28"
                VerticalContentAlignment="Center"
                Text="{Binding UserName, Mode=TwoWay}"
                BorderThickness="0"
                Padding="5" />
        </Border>

        <!-- Password Label and TextBox -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Width="120"
                Height="28"
                FontWeight="Bold"
                Content="Enter Password"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                Width="200"
                Height="28"
                VerticalContentAlignment="Center"
                Text="{Binding PassWord, Mode=TwoWay}"
                BorderThickness="0"
                Padding="5" />
        </Border>

        <!-- Error Message -->
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="200"
            Height="28"
            Margin="10"
            Foreground="Red"
            Text="User Name or password can't be empty"
            Visibility="{Binding WrongCredentials, Converter={StaticResource BoolVisibilityConverter}}" />

        <!-- Register Button -->
        <Border
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            Background="Green"
            Margin="10">
            <Button
                Height="35"
                Command="{Binding SignupCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Register"
                FontSize="16"
                FontWeight="Bold"
                Foreground="Wheat"
                BorderThickness="0"
                Padding="5"
                Background="Transparent" />
        </Border>
    </Grid>
</Window>