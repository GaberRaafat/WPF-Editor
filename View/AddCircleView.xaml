<Window
    x:Class="Editor.View.AddCircleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Editor.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Editor.ViewModel"
    Title="AddCircleView"
    Width="400"
    Height="400"
    Background="#6e7179"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="CircleLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style x:Key="CircleTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="28" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="35" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="black" />
            <Setter Property="Background" Value="Green" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="5" />
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <viewModels:AddCircleViewModel />
    </Window.DataContext>

    <Grid VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header Text -->
            <RowDefinition Height="Auto" />
            <!-- Circle Name -->
            <RowDefinition Height="Auto" />
            <!-- Radius 1 -->
            <RowDefinition Height="Auto" />
            <!-- Radius 2 -->
            <RowDefinition Height="Auto" />
            <!-- Add Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Header Text -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Text="Enter Data Required for Circle"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White"
            Margin="0,10,0,20" />

        <!-- Circle Name Label and TextBox -->
        <Border
            Grid.Row="1"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * CircleName   =  "
                Style="{StaticResource CircleLabelStyle}" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="CircleName"
                Style="{StaticResource CircleTextBoxStyle}"
                Text="{Binding Name, Mode=TwoWay}" />
        </Border>

        <!-- Radius 1 Label and TextBox -->
        <Border
            Grid.Row="2"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Radius 1   =  "
                Style="{StaticResource CircleLabelStyle}" />
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="Radius1"
                Style="{StaticResource CircleTextBoxStyle}"
                Text="{Binding Radius1, Mode=TwoWay}" />
        </Border>

        <!-- Radius 2 Label and TextBox -->
        <Border
            Grid.Row="3"
            Grid.Column="0"
            CornerRadius="10"
            Background="AliceBlue"
            Margin="10">
            <Label
                Content=" * Radius 2   =  "
                Style="{StaticResource CircleLabelStyle}" />
        </Border>

        <Border
            Grid.Row="3"
            Grid.Column="1"
            CornerRadius="10"
            Background="White"
            Margin="10">
            <TextBox
                x:Name="Radius2"
                Style="{StaticResource CircleTextBoxStyle}"
                Text="{Binding Radius2, Mode=TwoWay}" />
        </Border>

        <!-- Add Button -->
        <Border
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            Background="Green"
            Margin="10">
            <Button
                Style="{StaticResource CircleButtonStyle}"
                Command="{Binding AddCircleCommand}"
                Content="Add" />
        </Border>
    </Grid>
</Window>